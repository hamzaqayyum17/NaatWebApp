<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NaatKhuwaanWebApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f7f6;
            display: flex;
            flex-direction: column;
        }

        /* ===== NAVBAR ===== */
        .navbar {
            background: linear-gradient(90deg, #0d3b2e, #145c43);
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 22px;
        }

        .nav-link {
            color: white !important;
            margin-left: 15px;
            position: relative;
            transition: 0.3s;
        }

            .nav-link:hover {
                color: #ffd700 !important;
            }

        /* ===== MAIN CONTENT ===== */
        .main-content {
            flex: 1;
            padding-top: 100px; /* Space for fixed navbar */
        }

        /* ===== FOOTER ===== */
        .footer {
            background: #0d3b2e;
            color: white;
        }

            .footer a {
                color: #ffd700;
                text-decoration: none;
            }
    </style>
</head>

<body>

    <!-- ===== NAVBAR ===== -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top shadow">
        <div class="container">
            <a class="navbar-brand text-white" href="/">NaatKhuwaan</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/NaatKhuwan/AllNk">NaatKhuwans</a></li>
                    <li class="nav-item"><a class="nav-link" href="/NaatKhuwan/SignUp">Register</a></li>
                    <li class="nav-item"><a class="nav-link" href="/NaatKhuwan/Login">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ===== MAIN BODY ===== -->
    <div class="main-content container">
        @RenderBody()
    </div>

    <!-- ===== FOOTER ===== -->
    <footer class="footer text-center py-4">
        <div class="container">
            <h5 class="fw-bold">NaatKhuwaanWebApp</h5>
            <p class="mb-1">Promoting the Art of Naat Recitation</p>
            <small>© @DateTime.Now.Year All Rights Reserved</small>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>